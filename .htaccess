RewriteEngine On

# Redirecting old URLs to new SEO-friendly URLs
RewriteRule ^about.html$ /about-md-rayyan-nawaz.html [R=301,L]
RewriteRule ^article.html$ /articles-by-rayyan-nawaz.html [R=301,L]
RewriteRule ^blog.html$ /blog-technology-cybersecurity.html [R=301,L]
RewriteRule ^contact.html$ /contact-md-rayyan-nawaz.html [R=301,L]
RewriteRule ^services.html$ /services-development-security.html [R=301,L]
RewriteRule ^portfolio.html$ /portfolio-full-stack-security.html [R=301,L]
RewriteRule ^portfolio-details.html$ /portfolio-details-project-showcase.html [R=301,L]

# Ensure www is used
RewriteCond %{HTTP_HOST} ^therayyanawaz\.co\.in [NC]
RewriteRule ^(.*)$ https://www.therayyanawaz.co.in/$1 [L,R=301]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Custom 404 error page
ErrorDocument 404 /404.html

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/x-javascript
</IfModule>

# Cache Control
<FilesMatch "\.(ico|jpg|jpeg|png|gif|js|css|svg)$">
  Header set Cache-Control "max-age=2592000, public"
</FilesMatch> 